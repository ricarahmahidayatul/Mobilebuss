<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pusatbantuanActivity"
    android:background="@drawable/ic_gradasibgbadan">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_bgputih"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_marginLeft="50dp"
            app:cardCornerRadius="16dp"
            android:layout_marginTop="100dp">

            <ImageView
                android:layout_marginTop="30dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginLeft="75dp"
                android:src="@drawable/icon_smart_toy" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Sempurna jaya"
                android:layout_marginTop="170dp"
                android:layout_marginLeft="75dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Contact Center"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="75dp"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="WhatsApp"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="230dp"
                android:backgroundTint="#57CC20"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Sosial media"
            android:layout_marginTop="470dp"
            android:layout_marginLeft="140dp"
            android:textSize="20dp"
            android:textStyle="bold" />

        <View
            android:layout_width="310dp"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="500dp"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>