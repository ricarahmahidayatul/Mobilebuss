<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AkunFragment"
    android:background="@drawable/ic_gradasibgbadan">

    <RelativeLayout
        android:id="@+id/inti"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_bgputih"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_account" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Ubah Data Akun"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="60dp"/>

        <ImageView
            android:layout_marginTop="50dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="350dp"
            android:src="@drawable/icon_arrow_forward" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="100dp"/>


        <ImageView
            android:layout_marginTop="120dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_info" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Tentang Mitra Sempurna Jaya"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="60dp"/>

        <ImageView
            android:layout_marginTop="120dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="350dp"
            android:src="@drawable/icon_arrow_forward" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="170dp"/>


        <ImageView
            android:layout_marginTop="180dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_chat" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Pusat Bantuan"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="60dp"/>

        <ImageView
            android:layout_marginTop="180dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="350dp"
            android:src="@drawable/icon_arrow_forward" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="230dp"/>


        <ImageView
            android:layout_marginTop="240dp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/icon_directions" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Syarat dan Ketentuan"
            android:layout_marginTop="250dp"
            android:layout_marginLeft="60dp"/>

        <ImageView
            android:layout_marginTop="240dp"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="350dp"
            android:src="@drawable/icon_arrow_forward" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#000000"
            android:layout_marginTop="290dp"/>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>